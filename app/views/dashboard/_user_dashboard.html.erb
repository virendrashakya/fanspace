<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= button_to "Logout as User", destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>


  <% Array.wrap(Influencer.all).each do |influencer|%>
    <div class="row">
      <div class="col-sm-4">
        Email: <%= influencer.email %>
      </div>
      <div class="col-sm-8">
        <% if current_user.following_influencer? influencer %>
          <%= button_to "Unfollow", relationship_path(influencer), params: {influencer_id: influencer.id}, method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= button_to "Follow", relationships_path, params: {influencer_id: influencer.id}, method: :post, class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>