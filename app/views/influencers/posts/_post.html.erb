<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Cost:</strong>
    <%= post.cost %>
  </p>

  <p>
    <strong>Private:</strong>
    <%= post.private %>
  </p>
  
  <p>
    <strong>Images:</strong>
    <% post.image.each do |image| %>
          <%= image_tag url_for(image), :class => "illustrations" %>
    <% end %>
  </p>

</div>
