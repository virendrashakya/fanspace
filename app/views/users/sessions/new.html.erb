<div class="theme-layout">
	<div class="container-fluid pdng0">
		<div class="row merged">
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
				<div class="land-featurearea">
					<div class="land-meta">
						<h1>Fanspace</h1>
						<p>
							Fanspace is free to use for as long as you want with two active projects.
						</p>
						<div class="friend-logo">
							<span>
                <%= image_tag "wink.png" %>
              </span>
						</div>
						<a href="#" title="" class="folow-me">Follow Us on</a>
					</div>	
				</div>
			</div>
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
				<div class="login-reg-bg">
					<div class="log-reg-area sign">
						<h2 class="log-title">Login</h2>
							<p>
								Donâ€™t use Fanspace Yet? <a href="#" title="">Take the tour</a> or <a href="#" title="">Join now</a>
							</p>
						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							<div class="form-group">	
                <%= f.email_field :email, autofocus: true %>
							  <%= f.label :email, class: "control-label" %>
                <i class="mtrl-select"></i>
							</div>
							<div class="form-group">
                <%= f.password_field :password %>
							  <%= f.label :password, class: "control-label" %>
                <i class="mtrl-select"></i>
							</div>
              
              <% if devise_mapping.rememberable? %>
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me, class: "form-check-input"%>
                    <i class="check-box"></i>Always Remember Me.
                  </label>
                </div>
              <% end %>
							<a href="#" title="" class="forgot-pwd">Forgot Password?</a>
							<div class="submit-btns actions">
                <div class="float-left">
                  <%= f.submit "Log in", class: "mtr-btn signin" %>
                </div>
                <div class="float-right">
                  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
                  <%= link_to "Log in as influncers?", new_session_path(Influencer.new) %><br />
                </div>
							</div>
						<% end %>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>
